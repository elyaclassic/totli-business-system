# Git line ending konfiguratsiyasi
# Android NDK fayllarini ignore qilish
android_app/** -text
*.cmd -text
*.bat -text

# Python fayllari
*.py text eol=lf
*.pyw text eol=lf

# HTML, CSS, JS fayllari
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Markdown fayllari
*.md text eol=lf

# SQL fayllari
*.sql text eol=lf

# Config fayllari
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# YAML fayllari
*.yml text eol=lf
*.yaml text eol=lf

# JSON fayllari
*.json text eol=lf

# XML fayllari
*.xml text eol=lf

# Shablon fayllari
*.html text eol=lf
